<div class="parent_main">
  <div class="container">
    <div class="grid gap-3">
      <br />
      <div class="d-flex justify-content-between">
        <div class="h3">
          <%= 'やくそく編集' %>
        </div>
        <% if @promise.monthly_flag? %>
        <%= '毎日のやくそく' %>
        <% elsif @promise.day_of_week? %>
          <%= "毎週#{I18n.t("date.day_names")[@promise.day_of_week_before_type_cast.to_i]}のやくそく"  %>
        <% elsif @promise.start_day?  %>
          <%= "#{@promise.start_day.strftime('%m/%d')}のやくそく" %>
        <% end %>
      </div>
      <%= render 'form' %>
      <br />
      <div class="p-2">
        <%= link_to child_promises_path, class: 'main-link ' do %>
          <i class="fa-solid fa-circle-arrow-left"></i><span>戻る</span>
        <% end %>
      </div>
      <br />
    </div>
  </div>
</div>
