<div class="parent_main">
  <div class="container">
    <div class="grid gap-3">
      <br />
      <div class="d-flex justify-content-between">
        <div class="h3">やくそく一覧</div>
        <%= link_to "やくそく登録", new_child_promise_path, class: 'btn btn-original shadow-sm' %>
      </div>
      <br />
      <ul class="list-group">
        <li class="list-group-item list-group-item-secondary border border-secondary shadow-sm">
          <div>やくそく日 / 1日の回数 / 達成ポイント</div>
          <div>やくそくの内容</div>
        </li>
        <li class="list-group-item bg-light border border-secondary shadow-sm">
          <% @promises.each do |promise| %>
            <div class="d-flex">
              <%= promise.start_time %> /
              <%= promise.frequency %> /
              <%= promise.points %>
            </div>
            <%= promis.description %>
          <% end %>
        </li>
      </ul>
      <br />
      <br />
      <br />
      <div class="d-flex justify-content-end">
        <%= link_to '戻る', child_path(@child.id), class: 'main-link ' %>
      </div>
    </div>
  </div>
</div>
