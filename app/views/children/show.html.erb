<div class="parent_main">
  <div class="container">
    <div class="row grid gap-3">
      <div class="text-center">
          <br />
        <div class="d-flex justify-content-between align-items-center">
          <span class="h3">お子様情報管理</span>
        </div>
          <br/>
        <div class="row bg-white p-3 mb-2">
          <div class="d-flex justify-content-center">
            <div class="h2 p-2 m-3">
              <%= @child.name %>
            </div>
          </div>
          <div class="h4 p-2 m-3">
            <%= @child.birth_date.strftime('%Y/%m/%d') %>
            <%= "(#{calculate_age(@child.birth_date)}才）" %>
          </div>
          <div class="d-flex justify-content-end align-items-center">
            <button type="button" class="btn btn-original m-3">
              <%= link_to "編集", edit_child_path(@child), class: 'body-link' %>
            </button>
            <%= button_to '削除', child_path(@child), class: 'btn btn-original m-3',
                           method: :delete, data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
          <br />
          <br />
        <div class="row bg-white p-3 mb-2">
          <div class="d-flex justify-content-between align-items-center">
            <div class="h3">お約束</div>
            <button type="button" class="btn btn-original btn-lg">
              <%= link_to "登録", '#', class: 'body-link' %>
            </button>
          </div>
        </div>
          <br />
      </div>
    </div>
  </div>
</div>