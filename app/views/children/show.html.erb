<div class="parent_main">
  <div class="container">
    <div class="grid gap-3">
        <br />
      <h3>お子様情報管理</h3>
      <div class="row d-flex align-items-center">
        <div class="col-8 p-3 mb-2 bg-light border border-secondary rounded m-2">
          <div class="d-flex justify-content-center">
            <div class="h3 m-2 fw-bold">
              <%= @child.name %>
            </div>
          </div>
          <div class="h4 m-1 text-center">
            <%= @child.birth_date.strftime('%Y/%m/%d') %>
            <%= "(#{calculate_age(@child.birth_date)}才）" %>
          </div>
          <div class="d-flex justify-content-end align-items-center">
            <%= link_to "編集", edit_child_path(@child), class: 'btn btn-original m-3' %>
            <%= button_to '削除', child_path(@child), class: 'btn btn-original m-3',
                           method: :delete, data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
        <ul class="col-3 list-group text-center p-2">
          <li class="list-group-item list-group-item-action list-group-item-secondary border border-secondary">
            <%= link_to "約束設定", '#', class: 'main-link' %>
          </li>
          <li class="list-group-item list-group-item-action list-group-item-secondary border border-secondary">
            <%= link_to "Reward設定", '#', class: 'main-link' %>
          </li>
          <li class="list-group-item list-group-item-action list-group-item-secondary border border-secondary">
            <% if @child_payday %>
              <%= link_to 'Payday設定', payday_path(@child_payday), class: 'main-link' %>
            <% else %>
              <%= link_to 'Payday登録', new_payday_path, class: 'main-link' %>
            <% end %>
          </li>
        </ul>
      </div>
        <br />
      <h3> 今日のおやくそく</h3>
      <ul class="list-group">
          <li class="list-group-item bg-light border border-secondary">
            aaa
          </li>
          </div>
        </ul>
          <br />
      </div>
    </div>
  </div>
</div>