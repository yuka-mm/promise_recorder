<div class="parent_main">
  <div class="container">
    <div class="grid gap-3">
      <br />
      <div class="d-flex">
        <h3>お子様情報管理</h3>
        <div class="dropdown ms-5">
          <button class="btn btn-original dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            お子様の変更
          </button>
          <ul class="dropdown-menu text-center">
            <% @children.each do |child| %>
              <li><hr class="dropdown-divider"></li>
              <% unless child == @child %>
                <li><%= link_to "#{child.name}", child_path(child), class: 'main-link' %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="row d-flex align-items-center">
        <div class="col-7 p-2 bg-light border border-secondary rounded m-2">
          <div class="d-flex justify-content-center">
            <div class="h3 m-2 fw-bold">
              <%= @child.name %>
            </div>
          </div>
          <div class="h4 text-center">
            <%= @child.birth_date.strftime('%Y/%m/%d') %>
            <br class="d-md-none" />
            <%= "(#{calculate_age(@child.birth_date)}才）" %>
          </div>
          <div class="d-flex justify-content-end align-items-center">
            <%= link_to "編集", edit_child_path(@child), class: 'btn btn-original m-4' %>
            <%= button_to '削除', child_path(@child), class: 'btn btn-original m-3',
                           method: :delete, data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
        <div class="col-4">
          <ul class="list-group text-center">
            <li class="list-group-item list-group-item-action list-group-item-secondary border border-secondary">
              <%= link_to "お約束 設定", '#', class: 'main-link text-wrap' %>
            </li>
            <li class="list-group-item list-group-item-action list-group-item-secondary border border-secondary">
              <%= link_to "ご褒美 設定", '#', class: 'main-link text-wrap' %>
            </li>
            <li class="list-group-item list-group-item-action list-group-item-secondary border border-secondary">
              <% if @child %>
                <%= link_to '通知日 変更', child_payday_path(@child), class: 'main-link text-wrap' %>
              <% else %>
                <%= link_to '通知日 登録', new_child_payday_path(@child), class: 'main-link text-wrap' %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <br />
      <h3> 今日のおやくそく</h3>
      <ul class="list-group">
        <li class="list-group-item bg-light border border-secondary">
            aaa
        </li>
      </ul>
      <br />
    </div>
  </div>
</div>
