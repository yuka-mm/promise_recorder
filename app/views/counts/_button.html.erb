
<%= link_to child_count_path(count.promise.child, count),
            method: :put,
            remote: true,
            class: 'toggle-completed main-link',
            data: { status: count.completed ? 'uncomplete' : 'complete' } do %>
  <i class="fa-<%= count.completed ? 'solid' : 'regular' %> fa-star h1"></i>
<% end %>
