<div crass="container">
  <div class="row grid gap-3">
    <div class="text-center">
      <div class="display-5 p-4">Forgot your password?</div><br /><br /><br />

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="field h3 p-2 col">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="actions p-2 d-grid gap-4  col-3 mx-auto">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-original btn-lg' %><br /><br />
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
