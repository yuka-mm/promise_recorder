<div class="container">
  <div class="row grid gap-3">
    <div class="text-center">
      <h2 class="display-5 p-4">パスワード変更</h2>
      <br />
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="field h3 p-2 col">
          <%= f.label :password, "新しいパスワードを入力してください" %>
          <br />
          <br />
          <% if @minimum_password_length %>
            <em>パスワード(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>
      
        <div class="field h3 p-2 col">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions p-2 d-grid gap-4 col-5 mx-auto">
            <%= f.submit "登録する", class: 'btn btn-original shadow-sm' %>
       </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
