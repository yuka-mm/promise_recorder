<div class="parent_main">
  <div crass="container">
    <div class="row grid gap-3">
      <div class="text-center">
          <br />
        <div class="display-5 p-4">ユーザー名変更</div>
          <br />
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>  
          
          <div class="field h3 p-2 col">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>  
            <br />
          <div class="actions p-2 d-grid gap-4 col-5 mx-auto">
            <%= f.submit "更新する", class: 'btn btn-original shadow-sm' %>
          </div>
          <br />
          <br />
          <%= link_to "マイページに戻る", parent_path, class: 'main-link' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
